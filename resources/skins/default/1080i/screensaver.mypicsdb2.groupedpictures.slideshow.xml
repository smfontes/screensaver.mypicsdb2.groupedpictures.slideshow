		<control type="image">
			<description>Splash screen when waiting to start slideshow</description>
			<posx>729</posx>
			<posy>309</posy>
			<width>461</width>
			<height>461</height>
			<aspectratio>keep</aspectratio>
			<fadetime>0</fadetime>
			<texture>screensaver-splash.png</texture>
			<animation effect="rotate" end="-360" center="auto" time="7000" loop="true" reversible="false" condition="!String.IsEqual(Window.Property(SlideView.Splash),hide)">Conditional</animation>
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="1000" delay="500"/>
			</animation>
			<animation type="Conditional" condition="String.IsEqual(Window.Property(SlideView.Splash),hide)">
				<effect type="fade" start="100" end="0" time="500"/>
			</animation>
			<visible>!String.IsEqual(Window.Property(SlideView.Splash),hide)</visible>
		</control>
		<control type="group">
			<description>The clock</description>
			<visible>String.IsEqual(Window.Property(SlideView.Clock),show)</visible>
			<control type="label">
				<description>Time -- for most skins</description>
				<visible>!String.IsEqual(Window.Property(SkinName),skin.metropolis)</visible>
				<top>1000</top>
				<right>15</right>
				<width>160</width>
				<height>110</height>
				<font>font13</font>
				<textcolor>ddFFFFFF</textcolor>
				<shadowcolor>FF000000</shadowcolor>
				<label>$INFO[System.Time(hh:mm xx)]</label>
			</control>
			<control type="group">
				<description>Time -- for metropolis skin</description>
				<visible>String.IsEqual(Window.Property(SkinName),skin.metropolis)</visible>
				<control type="label">
					<description>Hours</description>
					<right>139</right>
					<bottom>87</bottom>
					<width>200</width>
					<height>112</height>
					<align>right</align>			
					<font>METF_Hours</font>
					<textcolor>Time</textcolor>
					<shadowcolor>FF000000</shadowcolor>
